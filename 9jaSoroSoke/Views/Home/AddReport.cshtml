@model _9jaSoroSoke.Domain.Models.CarOwnerViewModel

@{
    ViewData["Title"] = "AddReport";
}

<h1>AddReport</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form  enctype="multipart/form-data"  asp-controller="Home" asp-action="AddReport" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProofOfVehicleOwnerShip" class="control-label"></label>
                <input type="file" required accept=".txt,.doc,.jpg ,.docx,.png" name="file" id="file" />
                <span asp-validation-for="ProofOfVehicleOwnerShip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseReciept" class="control-label"></label>
                <input type="file" required accept=".txt,.doc,.jpg ,.docx,.png" name="file" id="file" />
                <span asp-validation-for="PurchaseReciept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
