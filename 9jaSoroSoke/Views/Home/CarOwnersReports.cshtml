@model IEnumerable<_9jasorosoke.Repositories.Models.CarOwnerModel>

@{
    ViewData["Title"] = "CarOwnersReports";
}

<link href="~/css/tooplate-gymso-style.css" rel="stylesheet" />

<section class="schedule section" id="schedule">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">
                <h6 data-aos="fade-up">our weekly GYM schedules</h6>

                <h2 class="text-white" data-aos="fade-up" data-aos-delay="200">Workout Timetable</h2>
            </div>
            @if (Model != null)
            {
                <div class="col-lg-12 py-5 col-md-12 col-12">
                    <table class="table table-bordered table-responsive schedule-table" data-aos="fade-up" data-aos-delay="300">

                        <thead class="thead-light">
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">PhoneNumber</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </strong>
                                    </td>
                                    <td>
                                        <strong>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </strong>
                                    </td>
                                    <td>
                                        <strong>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </strong>
                                    </td>
                                    <td>
                                        <button> @Html.ActionLink("Details", "VeiwDetails", new { id = item.Id })</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="valid-feedback">
                    No Record Found
                </div>
            }

        </div>
    </div>
</section>
